@model Page3ViewModel
@{
    ViewBag.Title = "Add Trip - Page 3";
}

<h2 class="text-center mb-4">Add Things to do in @Model.Destination</h2>

<form class="custom-form" asp-action="Page3" asp-controller="Trip" method="post">
    <div class="form-group">
        <label for="SelectedActivities">Select Activities</label>
        <select class="form-control" asp-for="SelectedActivityIds" asp-items="Model.AvailableActivities" multiple="multiple">
        </select>
        <span class="text-danger" asp-validation-for="SelectedActivityIds"></span>
    </div>

    <div class="d-flex justify-content-center gap-3">
        <button class="btn bg-black text-white px-4" type="submit">Next</button>
        <a class="btn btn-outline-danger" asp-controller="Trip" asp-action="Cancel">Cancel</a>
    </div>
</form>
